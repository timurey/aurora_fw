{"configurations": [

      {
         "name": "OpenOCD & gdb",
         "type": "cppdbg",
         "request": "launch",
         "program": "${workspaceRoot}/build/Src/Aurora",
         "args": [],
         "stopAtEntry": false,
         "cwd": "${workspaceRoot}",
         "environment": [],
         "externalConsole": false,
         "logging": {
            "engineLogging":false,
            "moduleLoad": true,
            "exceptions": true
         },
         "osx": {
            "MIMode": "gdb",
            "miDebuggerPath":"/opt/local/arm-toolchain/bin/arm-none-eabi-gdb",            
            "setupCommands": [
                  {"text":"-target-select remote localhost:3333"},
                  // {"text": "file ${workspaceRoot}/build/Src/Aurora"},
                  {"text":"-interpreter-exec console \"monitor reset halt\""},
                  {"text":"-interpreter-exec console \"monitor continue\""}
                  // {"text":"-interpreter-exec console \"tbreak main\""},
                  // {"text":"-interpreter-exec console \"monitor reg\""}
                           ],
            "launchCompleteCommand": "exec-continue"
            
         }
      }
   ]
}